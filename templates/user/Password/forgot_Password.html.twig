{% extends 'base.html.twig' %}

{% block title %}{% trans %}Reset password{% endtrans %}{% endblock %}
{% block content %}
<div class="container">
    <h1>{% trans %}Reset password{% endtrans %}</h1>
    <div class="justify-content-center text-center">
        <div class="mb-4">
            <form method="post">
                <div class="col-10">
                    <label for="mail" class="form-label mb-4" >{% trans %} Enter your email address to reset your password {% endtrans %}</label>
                    <input type="email" class="form-control" id="mail" aria-describedby="emailHelp" placeholder=" saisissez votre adresse mail...">
                </div>
                <div>
                <a href=""><button type="submit" class="btn btn-lg btn-primary mt-4">{% trans %} Reset password {% endtrans %}</button></a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}