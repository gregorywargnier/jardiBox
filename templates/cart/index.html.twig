{% extends 'base.html.twig' %}

{% block title %}panier{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mb-4">{% trans %} Your Cart {% endtrans %}</h1>
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('removeCart',{'id': item.product.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3" class="text-right">
                        total :
                    </td>
                    <td>{{ total }}</td>
                    <td></td>
                </tr>
                </tfoot>
            </table>

            <div class="col-lg-6">
                <a href="{{ path('product') }}"><button type="button" class="btn btn-primary btn-lg ">retour</button></a>
            </div>
            <div class="col-lg-6">
                <a href="#"><button type="button" class="btn btn-primary btn-lg ">continuer</button></a>
            </div>
        </div>
    </div>



{% endblock %}