{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            {% for ouruniverse in OurUniverse %}
                {{ dump(ouruniverse.ourUniverse.title) }}
                <div class="card" style="width: 18rem;">
                    <img src="#" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ ouruniverse.name }}</h5>
                        <p class="card-text">{{ ouruniverse.description }}</p>
                        <a href="#" class="btn btn-primary">{% trans %}To discover{% endtrans %}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}